<hr>
<div class="row">
	<div class="span6">
	<fieldset class="fields">
		<div class="control-group">
			<b><%= f.label :main, "Is it main contact?", :class => 'control-label' %></b>
			<div class="controls">
				<%= f.check_box :main %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :title, "Title: ", :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :title %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :full_name, "Full Name: ", :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :full_name %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :email, "Email: ", :class => 'control-label' %>
			<div class="controls">
				<%= f.text_field :email %>
			</div>
		</div>
		<div class="control-group">
			<%= f.label :mobile, "Mobile: ", :class => 'control-label'%>
			<div class="controls">
				<%= f.text_field :mobile %>
			</div>
		</div>
		<%= f.hidden_field :_destroy %>
	</fieldset>
	</div>
	<div class="span6">
		<div class="btn btn-danger">
			<%= link_to_remove_fields "Remove", f %>
		</div>
	</div>
</div>