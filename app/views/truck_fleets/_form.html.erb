<%= form_for @truck_fleet, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :trading_name_of_business, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :trading_name_of_business, :class => 'text_field' %>
    </div>
  </div>
    <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :street_2, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :street_2, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :suburb, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :suburb, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :state, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :state, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :postcode, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :postcode, :class => 'number_field' %>
    </div>
  </div>
  <%= f.fields_for :contact_truck_fleets do |builder| %>
    <%= render "contact_truck_fleet_fields", :f => builder %>
  <% end %>
  <%= link_to_add_fields 'Add Contact Details', f, :contact_truck_fleets %>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                truck_fleets_path, :class => 'btn' %>
  </div>
<% end %>
<div id="myModal" class="modal hide fade">
  <div class="modal-header">
		<img class='' alt="Mytruckfleet" src="/assets/MyTruckFleet/MyTruckFleet.png" width="128"/>
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
  </div>
  <div class="modal-body">
    <p>Don't forget to click Update Truck Fleet button below.</p>
  </div>
  <div class="modal-footer">
    <a class="btn btn-primary" data-dismiss="modal">OK</a>
  </div>
</div>