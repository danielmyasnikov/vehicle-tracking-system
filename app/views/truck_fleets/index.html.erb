<%- model_class = TruckFleet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:trading_name_of_business) %></th>
      <th><%= model_class.human_attribute_name(:street) %></th>
      <th><%= model_class.human_attribute_name(:street_2) %></th>
      <th><%= model_class.human_attribute_name(:suburb) %></th>
      <th><%= model_class.human_attribute_name(:state) %></th>
      <th><%= model_class.human_attribute_name(:postcode) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @truck_fleets.each do |truck_fleet| %>
      <tr>
        <td><%= link_to truck_fleet.id, truck_fleet_path(truck_fleet) %></td>
        <td><%= truck_fleet.trading_name_of_business %></td>
        <td><%= truck_fleet.street %></td>
        <td><%= truck_fleet.street_2 %></td>
        <td><%= truck_fleet.suburb %></td>
        <td><%= truck_fleet.state %></td>
        <td><%= truck_fleet.postcode %></td>
        <td><%=l truck_fleet.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_truck_fleet_path(truck_fleet), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      truck_fleet_path(truck_fleet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_truck_fleet_path,
            :class => 'btn btn-primary' %>
