<%- model_class = FaultBook -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:fault_type) %></th>
      <th><%= model_class.human_attribute_name(:driver_id) %></th>
      <th><%= model_class.human_attribute_name(:fleet_id) %></th>
      <th><%= model_class.human_attribute_name(:fault_date) %></th>
      <th><%= model_class.human_attribute_name(:mileage) %></th>
      <th><%= model_class.human_attribute_name(:contact_no) %></th>
      <th><%= model_class.human_attribute_name(:faults) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @fault_books.each do |fault_book| %>
      <tr>
        <td><%= link_to fault_book.id, fault_book_path(fault_book) %></td>
        <td><%= fault_book.fault_type %></td>
        <td><%= fault_book.driver_id %></td>
        <td><%= fault_book.fleet_id %></td>
        <td><%= fault_book.fault_date %></td>
        <td><%= fault_book.mileage %></td>
        <td><%= fault_book.contact_no %></td>
        <td><%= fault_book.faults %></td>
        <td><%=l fault_book.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_fault_book_path(fault_book), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      fault_book_path(fault_book),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_fault_book_path,
            :class => 'btn btn-primary' %>
