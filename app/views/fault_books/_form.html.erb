<%= form_for @fault_book, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :fault_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fault_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :driver_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :driver_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fleet_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :fleet_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fault_date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :fault_date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :mileage, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :mileage, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contact_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contact_no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :faults, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :faults, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                fault_books_path, :class => 'btn' %>
  </div>
<% end %>
