<%= form_for @training, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
      <%= f.label :driver_id, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :training, :driver_id, Driver.all, :id, :name, :promt => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :training_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.date_select :date, :class => 'date_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :start_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :start_time, :class => 'time_select' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :finish_time, :class => 'control-label' %>
    <div class="controls">
      <%= f.time_select :finish_time, :class => 'time_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                trainings_path, :class => 'btn' %>
  </div>
<% end %>
