<%= form_for @repairer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :business_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :business_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :full_address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :full_address %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label '24_hour_service', :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :hour_service_24, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone_number, :class => 'text_field' %>
    </div>
  </div>
  <%= f.fields_for :contact_repairers do |builder| %>
    <%= render "contact_repairers", :f => builder %>
  <% end %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                repairers_path, :class => 'btn' %>
  </div>
<% end %>
