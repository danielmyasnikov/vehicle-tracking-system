<%- model_class = Repairer -%>
<div class="page-header">
  <h1><%= @repairer.business_name %> <%#= image_tag @repairer.avatar.url, :size => '32x32' %></h1>
</div>
<%= gmaps4rails(@gmap) %>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:street_address_1) %>:</strong></dt>
  <dd><%= @repairer.street_address_1 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:street_address_2) %>:</strong></dt>
  <dd><%= @repairer.street_address_2 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:suburb) %>:</strong></dt>
  <dd><%= @repairer.suburb %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @repairer.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:postcode) %>:</strong></dt>
  <dd><%= @repairer.postcode %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hour_service_24) %>:</strong></dt>
  <dd><%= @repairer.hour_service_24 %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone_number) %>:</strong></dt>
  <dd><%= @repairer.phone_number %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              repairers_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_repairer_path(@repairer), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              repairer_path(@repairer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
