<%- model_class = Fleet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:make) %>:</strong></dt>
  <dd><%= @fleet.make %></dd>
  <dt><strong><%= model_class.human_attribute_name(:model) %>:</strong></dt>
  <dd><%= @fleet.model %></dd>
  <dt><strong><%= model_class.human_attribute_name(:year) %>:</strong></dt>
  <dd><%= @fleet.year %></dd>
  <dt><strong><%= model_class.human_attribute_name(:vin) %>:</strong></dt>
  <dd><%= @fleet.vin %></dd>
  <dt><strong><%= model_class.human_attribute_name(:registration) %>:</strong></dt>
  <dd><%= @fleet.registration %></dd>
  <dt><strong><%= model_class.human_attribute_name(:fleet_number) %>:</strong></dt>
  <dd><%= @fleet.fleet_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:auto_services) %>:</strong></dt>
  <dd><%= @fleet.auto_services ? "Yes" : "No" %></dd>
  <dt><strong><%= model_class.human_attribute_name(:actual_km) %>:</strong></dt>
  <dd><%= @fleet.actual_km.present? ? @fleet.actual_km.round(2) : '0.0 ' %>KM <!-- Is it correct? --> <%#= link_to t('.edit mileage', :default => t("helpers.links.edit")),
              												edit_fleet_path(@fleet) + "#fleet_km_estimates", :class => 'btn btn-primary' %></dd>
  <dt><strong><%= model_class.human_attribute_name(:other) %>:</strong></dt>
  <dd><%= @fleet.other ||= ' ' %></dd>
</dl>
  <hr>
  <dl class="dl-horizontal">
  <% @fleet.assets.each_with_index do |asset, i| %>
    <dt><strong>Invoice <%= i + 1 %>:</strong></dt> 
    <dd><%= link_to "#{asset.invoice.name} created at: #{asset.created_at}", asset.invoice.url %></dd>
  <% end %>
  </dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              fleets_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_fleet_path(@fleet), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              fleet_path(@fleet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
