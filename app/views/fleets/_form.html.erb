<%= form_for @fleet, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :truck_fleet, :class => 'control-label' %>
    <div class="controls">
      <%= collection_select :fleet, :truck_fleet_id, TruckFleet.all, :id, :trading_name_of_business, :promt => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :image, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :avatar %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :vehicle_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :vehicle_type, ['Truck', 'Trailer', 'Forklift', 'Ute', 'Car', 'Other-Machinery'], :promt => true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :notifications_to, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :pic, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :make, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :make, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :model, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :model, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :year, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :year, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :VIN, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :VIN, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :registration, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :registration, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :fleet_number, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :fleet_number, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :auto_services, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :auto_services, :class => 'check_box' %>  <i><font size="2">If unticked kilometres will be entered on service page</font></i>
	  </br></br>
	  <%= f.text_field :km_estimates, :class => 'text_field', :value => "Enter KM estimates", :disabled => true %> KM per 
	  <%= f.select :period, ['Year', 'Month', 'Week', 'Day'], :options => {:disabled => true, :promt => true}, :class => 'text_field' %><br><br>OR<br>
    </div>
    
    <div class="controls">
    	Every:
    	<%= f.text_field :service_frequency_number, :value => "Enter Date Frequency Estimates", :disabled => true %> 
    	<%= f.select :service_frequency_period, ['Year', 'Month', 'Week', 'Day'], :options => {:disabled => true, :promt => true}, :class => 'text_field' %>
    </div>
  </div>
  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                fleets_path, :class => 'btn' %>
  </div>
<% end %>
