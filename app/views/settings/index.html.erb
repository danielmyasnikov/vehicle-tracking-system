<%- model_class = Setting -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:truck_fleet_id) %></th>
      <th><%= model_class.human_attribute_name(:truck_identification) %></th>
      <th><%= model_class.human_attribute_name(:email_periods) %></th>
      <th><%= model_class.human_attribute_name(:email_recepient_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @settings.each do |setting| %>
      <tr>
        <td><%= link_to setting.id, setting_path(setting) %></td>.
        <td><%= setting.truck_fleet.trading_name_of_business %></td>
        <td><%= setting.truck_identification %></td>
        <td><%= setting.email_periods %></td>
        <td><%= setting.email_recepient_id %></td>
        <td><%=l setting.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_setting_path(setting), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      setting_path(setting),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_setting_path,
            :class => 'btn btn-primary' %>
