<%= form_for @setting, :html => { :class => 'form-horizontal' } do |f| %>

<div class="control-group">
	<%= f.label :truck_identification, :class => 'control-label' %>
	<div class="controls">
		<%= f.collection_select :truck_identification, 
			[
				["Fleet Number", "fleet_number"], 
				["Make", "make"], 
				["Model", "model"], 
				["VIN", "vin"], 
				["Registration", "registration"]
			], :last, :first, :class => 'text_field' %>
	</div>
</div>
<table class="table mtf-table">
	<thead>
		<th>Info</th>
		<th>Main</th>
		<th>Secondary</th>
		<th>Interval (if any)</th>
	</thead>
  <tbody>
	  <% @setting.email_notifications.each do |en| %>
			<%= f.fields_for en do |builder| %>
		  	<%= render "email_notifications", :f => builder, :email_notification => en %>
			<% end %>
	  <% end %>
	</tbody>
</table>
<div class="form-actions">
	<%= f.submit nil, :class => 'btn btn-primary' %>
	<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	settings_path, :class => 'btn' %>
</div>
<% end %>
<% if current_user.role == 'Primary' %>
	<%- model_class = User -%>
	<div class="upper-table-info">
		<span class="table-count-number"><%= @users.count %></span>
		<span class="table-truck-fleet-name"><%= "Customers" %></span>
	</div>
	<br/>

	<% if @users.present? %>
	<table class="table table-striped">
	  <thead>
	    <tr>
	      <th><%= model_class.human_attribute_name(:name) %></th>
	      <th>Approved</th>
	      <th>Email</th>
	      <th>Role</th>
	      <th><%=t '.actions', :default => t("helpers.actions") %></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @users.each do |user| %>
				<%= form_for user do |u| %>
		      <tr>
			      <td><%= user.name %></td>
		        <td><%= u.check_box :approved %><%#= user.truck_fleet.trading_name_of_business %></td>
			      <td><%= u.text_field :email %></td>
			      <td><%= u.select :role, ['Primary', 'Secondary'] %></td>
						<td>
						  <%= u.submit %>
						</td>
		      </tr>
				<% end %>
	    <% end %>
	  </tbody>
	</table>
	<% else %>
	  No users!
	<% end %>
<% end %>