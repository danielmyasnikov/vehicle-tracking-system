<%- model_class = Service -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>
<div class="row">
  <div class="span6">
    <dl class="dl-horizontal">
      
      <div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:fleet_id) %>:</strong></dt>
      	<dd><%= @service.fleet.name.present? ? @service.fleet.name : $not_available %></dd>
    	</div>
    	
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:repairer_id) %>:</strong></dt>
      	<dd><%= @repairer.business_name.present? ? @repairer.business_name : $not_available %></dd>
    	</div>
    	
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:service_type) %>:</strong></dt>
      	<dd><%= @service.service_type.present? ? @service.service_type : $not_available %></dd>
    	</div>
    	
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:warranty) %>:</strong></dt>
      	<dd><%= @service.warranty ? "Needs to be done" : "No"  %></dd>
    	</div>
    	
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:damage) %>:</strong></dt>
      	<dd><%= @service.damage ? "Needs to be done" : "No"  %></dd>
    	</div>
    	
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:repair) %>:</strong></dt>
      	<dd><%= @service.repair ? "Needs to be done" : "No"  %></dd>
    	</div>
    	
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:serivce) %>:</strong></dt>
      	<dd><%= @service.service ? "Needs to be done" : "No"  %></dd>
    	</div>
    	
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong><%= model_class.human_attribute_name(:breakdown) %>:</strong></dt>
      	<dd><%= @service.breakdown ? "Needs to be done" : "No"  %></dd>
    	</div>
    </dl>
  </div>
  <div class="span6">
    <dl class="dl-horizontal">
      <h2><%= @repairer.business_name %></h2>
      <%= image_tag "http://maps.google.com/maps/api/staticmap?size=600x350&sensor=false&zoom=14&markers=#{@repairer.latitude}%2C#{@repairer.longitude}" %>
      <div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong>Prime contact number:</strong></dt>
      	<dd><%= @repairer.phone_number.present? ? @repairer.phone_number : $not_available %></dd>
    	</div>
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong>24 hours service:</strong></dt>
      	<dd><%= @repairer.hour_service_24 ? "Yes" : "No" %></dd>
    	</div>
    	<div class="white-background margin-bottom-10px padding-top-bottom-10px">
      	<dt><strong>Full address:</strong></dt>
      	<dd><%= @repairer.full_address.present? ? @repairer.full_address : $not_available %></dd>
    	</div>
    </dl>
  </div>
</div>

<div class="form-actions">
  <div class="margin-bottom-10px">
		<% if @graph_monthly_spent_vehicles %>
			<%= high_chart("my_id", @graph_monthly_spent_vehicles) %>
		<% else %>
			<%= "No data available for Graph" %>
		<% end %>
	</div>
</div>

<div class="form-actions">
	<%= link_to 'Finish booking',
              calendar_index_path, :id => 'id-cancel', :class => 'btn' %> 
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_service_path(@service), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              service_path(@service),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
	<%= link_to 'Finalise service', finish_service_path(@service.id,
		:fleet_id => @service.fleet_id,
		:warranty => @service.warranty_price,
		:repair => @service.repair_price,
		:damage => @service.damage_price,
		:breakdown => @service.breakdown_price,
		:service => @service.service_price), :class => 'btn btn-warning' if @service.status == "ready" %>
</div>
<script>
$('.ie7-navigational').hide();
$('.module_info').hide();
$('#id-cancel').click(function(){
  window.close();
})
</script>