<%= form_for @service, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="field">
    <%= f.label :fleet_number, :class => 'control-label' %>
	  <div class="controls">
    <%= collection_select :fleet, :fleet_id, Fleet.all, :id, :fleet_number, :promt => true %>
	  </div>
  </div>
  <div class="field">
    <%= f.label :repairer_id, :class => 'control-label' %>
	<div class="controls">
      <%= collection_select :repairer, :repairer_id, Repairer.all, :id, :business_name, :promt => true, :class => 'text_field' %>
	</div>
  </div>
  <div class="control-group">
    <%= f.label :service_type, :class => 'control-label' %>
    <div class="controls">
      <%= select :service, :service_type, ['Scheduled', 'Unscheduled'], :promt => true %>
    </div>
  </div>
  <div class="field">
    <%= f.label :hours, :class => 'control-label' %>
	<div class="controls">
      <%= f.select :hours, [nil, 1, 2, 3, 4, 5, 6, 7, 8], :promt => true, :class => 'text_field' %>
	</div>
  </div>
  <div class="control-group">
    <%= f.label :service, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :service, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :warranty, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :warranty, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :damage, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :damage, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :repair, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :repair, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :breakdown, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :breakdown, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :self_service, :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :self_service, :class => 'check_box' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :KM_since_last_service, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :KM_since_last_service, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :time_since_last_service, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :time_since_last_service, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :other, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :time_since_last_service, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                services_path, :id => 'id-cancel', :class => 'btn' %>
  </div>
<% end %>
<script>
$('.navbar').hide();
$('#id-cancel').click(function(){
  window.close()
})
</script>